{
  "schemaVersion": 1,
  "id": "jsmc",
  "version": "${version}",
  "name": "Just Show Me Criteria",
  "description": "Pin any advancement and keep its remaining criteria visible on screen.",
  "authors": ["prodbyeagle"],
  "license": "MIT",
  "icon": "assets/jsmc/icon.png",
  "environment": "client",
  "entrypoints": {
    "modmenu": [
      {
        "adapter": "kotlin",
        "value": "dev.prodbyeagle.jsmc.ShowMeCriteriaModMenu"
      }
    ],
    "client": [
      "dev.prodbyeagle.jsmc.client.ShowMeCriteriaClient"
    ]
  },
  "mixins": [
    "jsmc.mixins.json"
  ],
  "suggests": {
    "modmenu": ">=${modmenu_version}"
  },
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-language-kotlin": ">=${kotlin_loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
